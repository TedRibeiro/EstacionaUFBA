<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/textView_list_adapter_titulo_ocorrencia"
        android:textSize="22sp"
        android:textColor="?android:attr/textColorPrimaryNoDisable" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_map_icon"
            android:id="@+id/imageViewMapPin"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_list_adapter_local"
            android:layout_weight="0.68"
            android:gravity="left"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp">

            <TextView
                android:text="@string/publicado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_list_adapter_published"
                android:layout_weight="0.67"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_list_adapter_dateCreated"
                android:layout_weight="0.01"
                android:gravity="left"
                android:layout_gravity="right" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
